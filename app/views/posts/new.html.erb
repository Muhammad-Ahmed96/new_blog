

<div class="row mt-2">
  <div class="col-4 offset-4">
    <div class="card">
      <div class="card-header">
        <h1>New Post</h1>
      </div>

      <div class="card-body">
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :body %>
            <%= f.rich_text_area :body, class: "form-control", required: true %>
          </div>

          <%= f.submit "Create Post", class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>